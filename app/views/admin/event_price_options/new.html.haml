%h1 Add Price Options
%p
  = icon "Write", edit_admin_event_path(@event)
  = link_to "Edit this Event", edit_admin_event_path(@event)
%div.current-options
  %h2 Current Price Options
  %table{ :cellspacing => "0" } 
    %th{:colspan => "2"} Title
    %th{:colspan => "2"} Description
    %th{:colspan => "2"} Price
    -for option in @event.event_price_options.public
      %tr[option]
        %td{:colspan => "2"}
          = icon "Write", edit_admin_event_event_price_option_path(@event, option)
          = option.title
        %td{:colspan => "2"}= option.description
        %td{:colspan => "2"}= number_to_currency(option.price)
        %td= trash_icon(option, admin_event_event_price_option_path(@event, option), "Delete #{option.title}")      
%h2 Add a new price option
=render :partial => "form"

=link_to "Done adding price options", admin_events_path