- unless @event_categories.empty?
  - content_for :side_column do
    %h2== #{@cms_config["site_settings"]["events_title"].titlecase} Categories
    %ul.event_categories.list_of_links
      %li.sidebar_link
        = link_to(icon("Rss 1"), "/#{path_safe(@cms_config['site_settings']['events_title'])}.rss", :class => "rss-icon", :title => "Subscribe to RSS Feed")
        = link_to("All Categories", "/#{path_safe(@cms_config['site_settings']['events_title'])}")
      - for category in @event_categories
        - if @event_category and @event_category == category
          %li.sidebar_link_active
            = link_to(icon("Rss 1"), event_category_url(category, :format => :rss), :class => "rss-icon-selected", :title => "Subscribe to RSS Feed")
            = h(category.title)
        - else
          %li
            = link_to(icon("Rss 1"), event_category_url(category, :format => :rss), :class => "rss-icon", :title => "Subscribe to RSS Feed")
            = link_to h(category.title), category 
